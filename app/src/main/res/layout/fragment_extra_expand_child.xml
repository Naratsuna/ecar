<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_of_tolls">

    <TextView
        android:id="@+id/itemChildName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="更换配件"
        android:textColor="@color/colorSmallBlack"
        android:textSize="16sp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:id="@+id/btn_reduce"
            android:layout_width="@dimen/size_of_btn_add_reduce"
            android:layout_height="@dimen/size_of_btn_add_reduce"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true">

            <ImageButton
                android:id="@+id/btn_l"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_reduce"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/textView_count"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="0"
            android:textSize="16sp"
            android:textColor="@color/colorSmallBlack"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/btn_reduce"
            android:background="@color/colorGrayLine"/>

        <RelativeLayout
            android:id="@+id/btn_add"
            android:layout_width="@dimen/size_of_btn_add_reduce"
            android:layout_height="@dimen/size_of_btn_add_reduce"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true"
            android:layout_toEndOf="@id/textView_count">

            <ImageButton
                android:id="@+id/btn_r"
                android:layout_width="@dimen/size_of_ic_add_reduce"
                android:layout_height="@dimen/size_of_ic_add_reduce"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_add"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>