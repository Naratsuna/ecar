<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_of_tolls"
    android:background="@color/colorMainGray">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/replacement_group_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_submit_extra"
        android:layout_marginBottom="@dimen/margin_of_tolls"
        >
    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/btn_submit_extra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/submit"
        android:background="@drawable/btn_blue_px21"
        android:textColor="@color/white"
        android:textSize="18sp"/>

</RelativeLayout>